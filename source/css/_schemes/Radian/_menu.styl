.menu {
  float: left;

  margin: 0;
  height: 100%;
  text-align: left;

  &::before,
  &::after {
    content: '';
    display: table;
    clear: both;
  }

  .menu-item {
    display: block;

    height: 100%;
    float: left;

    padding: 0 1.5em;
    margin: 0;

    transition: background .3s ease;

    &:hover {
      background: rgba(0, 0, 0, .1);
    }

    &:active {
      background: rgba(0, 0, 0, .2);
    }

    a {
      color: #fff;
      display: inline-block;

      &:hover {
        border-bottom-color: transparent;
      }
    }
  }
}
